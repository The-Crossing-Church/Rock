<div class='full-width'>
  <div class='container'>
    <br/>
    <h2 class='text--centered'>Read</h2>
    <a class='hidden-anchor' id='read'></a>
    <div class='carousel-wrapper'>
      <div id="read-slider" class="slider">
        <div class="wrapper">
          <div id="read-slides" class="slides">
            {% for post in Posts %}
            <div class="slide text--centered">
              <div style="padding: 8px;">
                <a href="{{ post.url }}">
                  <div class='img-wrapper'>
                    <img class="d-block w-100" src="{{ post.featuredImage }}" alt="{{ post.name }}" />
                  </div>
                  <h4>{{ post.name }}</h4>
                  <span>{{ post.authorName }}, {{ post.publishDate | Date:'MMMM dd, yyyy' }}</span>
                </a>
              </div>
            </div>
            {% endfor %}
          </div>
        </div>
        <a id="read-prev" class="control prev read-control">
          <i class='fa fa-chevron-left'></i>
        </a>
        <a id="read-next" class="control next read-control">
          <i class='fa fa-chevron-right'></i>
        </a>
      </div>
    </div>
  </div>
  <br/>
  <div style='text-align: center;'>
    <a class='btn btn-primary' href="http://thecrossingchurch-6480645.hs-sites.com/blog">Explore All</a>
  </div>
  <br/>
</div>

