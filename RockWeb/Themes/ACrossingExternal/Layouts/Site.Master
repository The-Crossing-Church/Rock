                        menu.addClass('active')
                    }, 20)
                }
            })
            $('#adult-menu-return').click(function () {
                let menu = $('.adult-menu-mobile')
                if (menu.hasClass('active')) {
                    menu.removeClass('active')
                    setTimeout(() => {
                        menu.removeClass('visible')
                    }, 20)
                }
            })
            $('#care-menu-open').click(function () {
                let menu = $('.care-menu-mobile')
                if (!menu.hasClass('active')) {
                    menu.addClass('visible')
                    setTimeout(() => {
                        menu.addClass('active')
                    }, 20)
                }
            })
            $('#care-menu-return').click(function () {
                let menu = $('.care-menu-mobile')
                if (menu.hasClass('active')) {
                    menu.removeClass('active')
                    setTimeout(() => {
                        menu.removeClass('visible')
                    }, 20)
                }
            })
        })
    </script>
